    <repositories>
        <!--aliyun仓库-->
        <repository>
            <id>aliyun</id>
            <name>aliyun</name>
            <url>https://maven.aliyun.com/nexus/content/groups/public</url>
            <layout>default</layout>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <maven_spring.profiles.active>local</maven_spring.profiles.active>
                <maven_docker.ip>127.0.0.1</maven_docker.ip>
            </properties>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <maven_spring.profiles.active>dev</maven_spring.profiles.active>
                <maven_docker.ip>127.0.0.1</maven_docker.ip>
                <maven_nacos.ip>127.0.0.1</maven_nacos.ip>
                <maven_nacos.port>8848</maven_nacos.port>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <maven_spring.profiles.active>prod</maven_spring.profiles.active>
            </properties>
        </profile>
    </profiles>
</project>