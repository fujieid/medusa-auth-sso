        <security-oauth2-autoconfigure.version>2.2.13.RELEASE</security-oauth2-autoconfigure.version>
        <mysql-connector-java.version>8.0.23</mysql-connector-java.version>
        <commons-lang3.version>3.11</commons-lang3.version>
        <commons-pool2.version>2.9.0</commons-pool2.version>
        <medusa-common.version>1.2.2</medusa-common.version>
        <mybatisplus-boot-starter.version>3.4.3</mybatisplus-boot-starter.version>
        <druid.version>1.2.5</druid.version>
        <guava.version>30.0-jre</guava.version>
        <feign.version>11.0</feign.version>
        <jap-ids.version>1.0.3</jap-ids.version>
        <httpclient.version>4.5.12</httpclient.version>
        <javafaker.version>1.0.2</javafaker.version>
        <findbugs.version>3.0.1</findbugs.version>
        <spring.cloud.alibaba.version>2.2.5.RELEASE</spring.cloud.alibaba.version>
        <nacos-client.version>2.0.2</nacos-client.version>
        <springfox-swagger3.version>3.0.0</springfox-swagger3.version>
        <swagger-bootstrap-ui.version>3.0.2</swagger-bootstrap-ui.version>
        <fastjson.version>1.2.75</fastjson.version>
        <flyway.version>6.3.3</flyway.version>
        <reflections.version>4.6.0.Final</reflections.version>
        <flyway-spring-test.version>6.3.3</flyway-spring-test.version>
        <!--maven插件版本-->
        <docker.image.prefix>chery-containers</docker.image.prefix>
        <docker-maven-plugin.version>1.2.2</docker-maven-plugin.version>
        <docker-maven-plugin-spotify.version>1.2.0</docker-maven-plugin-spotify.version>
        <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
        <maven-resources-plugin.version>3.2.0</maven-resources-plugin.version>
        <maven-jar-plugin.version>3.2.0</maven-jar-plugin.version>
        <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
        <maven-plugin-plugin.version>3.6.0</maven-plugin-plugin.version>
    </properties>

    <dependencyManagement>
